{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "NuoDB deployed on ECS Cluster",

  "Parameters": {
    "Bucket" : {
      "Type" : "String"
    },

    "EcsClusterName" : {
      "Type" : "String"
    },

    "nuodbDocker" : {
      "Type" : "String"
    },

    "VolumeSize" : {
      "Type" : "Number"
    },

    "StorefrontElb" : {
      "Type" : "String"
    },

    "peerAddress" : {
      "Type" : "String"
    },

    "dbuser" : {
      "Type": "String"
    },

    "dbpassword" : {
      "Type": "String"
    },

    "dbname" : {
      "Type": "String"
    },

    "DomainPassword" : {
      "Type": "String"
    },

    "EnvironmentType" : {
      "Type" : "String"
    },

    "NuoDBInstanceType" : {
      "Type" : "String"
    },
    "KeyName" : {
      "Type" : "String"
    },

    "VpcId" : {
      "Type" : "String"
    },

    "SubnetIds" : {
      "Type" : "CommaDelimitedList"
    },
    "ElkPrivateIP" : {
      "Type" : "String"
    },
    "ElasticPort" : {
      "Type" : "String",
      "Default" : "9200"
    },
    "ElasticIndex" : {
      "Type" : "String",
      "Default" : "interactive-demo"
    }
  },
  "Resources" : {
    "NuoDBBrokerTaskDefinitions": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family": "BROKER-family",
        "ContainerDefinitions": [
          {
            "Name": "BROKER-definition",
            "Image": {
              "Ref": "nuodbDocker"
            },
            "Cpu": "2",
            "MemoryReservation": "4096",
            "ReadonlyRootFilesystem": "false",
            "PortMappings": [
              {
                "ContainerPort": "8888",
                "HostPort": "8888"
              },
              {
                "ContainerPort": "48004",
                "HostPort": "48004"
              }
            ],
            "Environment": [
              {
                "Name": "NODE_REGION",
                "Value": {
                  "Ref": "AWS::Region"
                }
              },
              {
                "Name": "DOMAIN_PASSWORD",
                "Value": {
                  "Ref": "DomainPassword"
                }
              },
              {
                "Name": "ENV_TYPE",
                "Value": {
                  "Ref": "EnvironmentType"
                }
              },
              {
                "Name": "AGENT_PORT",
                "Value": "48004"
              },
              {
                "Name": "BROKER_PORT",
                "Value": "48004"
              },
              {
                "Name": "NODE_PORT",
                "Value": "48010"
              },
              {
                "Name": "NODE_TYPE",
                "Value": "BROKER"
              },
              {
                "Name": "PEER_ADDRESS",
                "Value": { "Ref" : "peerAddress" }
              },
              {
                "Name": "DB_NAME",
                "Value": {
                  "Ref": "dbname"
                }
              },
              {
                "Name": "DB_USER",
                "Value": {
                  "Ref": "dbuser"
                }
              },
              {
                "Name": "DB_PASSWORD",
                "Value": {
                  "Ref": "dbpassword"
                }
              },
              {
                "Name": "ARG_apphost",
                "Value": { "Fn::Join" : ["", ["http://", { "Ref" : "StorefrontElb" }, ":80/StorefrontWeb" ]]}
              },
              {
                "Name" : "ELASTIC_HOST",
                "Value" : { "Ref" : "ElkPrivateIP"}
              },
              {
                "Name" : "ELASTIC_PORT",
                "Value" : { "Ref" : "ElasticPort" }
              },
              {
                "Name" : "ELASTIC_INDEX",
                "Value" : { "Ref" : "ElasticIndex" }
              }
            ]
          }
        ]
      }
    },


    "NuoDBSMTaskDefinitions": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family" : "SM-family",
        "ContainerDefinitions": [
          {
            "Name": "SM-definition",
            "Image": {
              "Ref": "nuodbDocker"
            },
            "Cpu": "2",
            "MemoryReservation": "4096",
            "ReadonlyRootFilesystem": "false",
            "Environment": [
              {
                "Name": "NODE_REGION",
                "Value": {
                  "Ref": "AWS::Region"
                }
              },
              {
                "Name": "DOMAIN_PASSWORD",
                "Value": { "Ref": "DomainPassword" }
              },
              {
                "Name": "ENV_TYPE",
                "Value": { "Ref": "EnvironmentType" }
              },
              {
                "Name": "AGENT_PORT",
                "Value": "48004"
              },
              {
                "Name": "BROKER_PORT",
                "Value": "48004"
              },
              {
                "Name": "NODE_PORT",
                "Value": "48010"
              },
              {
                "Name": "NODE_TYPE",
                "Value": "SM"
              },
              {
                "Name": "PEER_ADDRESS",
                "Value": { "Ref" : "peerAddress" }
              },
              {
                "Name": "DB_NAME",
                "Value": { "Ref": "dbname" }
              },
              {
                "Name": "DB_USER",
                "Value": { "Ref": "dbuser" }
              },
              {
                "Name": "DB_PASSWORD",
                "Value": { "Ref": "dbpassword" }
              },
              {
                "Name": "ARG_apphost",
                "Value": { "Fn::Join" : ["", ["http://", { "Ref" : "StorefrontElb"}, ":80/StorefrontWeb" ]]}
              },
              {
                "Name" : "ELASTIC_HOST",
                "Value" : { "Ref" : "ElkPrivateIP"}
              },
              {
                "Name" : "ELASTIC_PORT",
                "Value" : { "Ref" : "ElasticPort" }
              },
              {
                "Name" : "ELASTIC_INDEX",
                "Value" : { "Ref" : "ElasticIndex" }
              }
            ]
          }
        ]
      }
    },

    "NuoDBTETaskDefinitions": {
      "Type": "AWS::ECS::TaskDefinition",
      "Properties": {
        "Family" : "TE-family",
        "ContainerDefinitions": [
          {
            "Name": "TE-definition",
            "Image": {
              "Ref": "nuodbDocker"
            },
            "Cpu": "2",
            "MemoryReservation": "4096",
            "ReadonlyRootFilesystem": "false",
            "Environment": [
              {
                "Name": "NODE_REGION",
                "Value": {
                  "Ref": "AWS::Region"
                }
              },
              {
                "Name": "DOMAIN_PASSWORD",
                "Value": { "Ref": "DomainPassword" }
              },
              {
                "Name": "ENV_TYPE",
                "Value": { "Ref": "EnvironmentType" }
              },
              {
                "Name": "AGENT_PORT",
                "Value": "48004"
              },
              {
                "Name": "BROKER_PORT",
                "Value": "48004"
              },
              {
                "Name": "NODE_PORT",
                "Value": "48010"
              },
              {
                "Name": "NODE_TYPE",
                "Value": "TE"
              },
              {
                "Name": "PEER_ADDRESS",
                "Value": { "Ref" : "peerAddress"}
              },
              {
                "Name": "DB_NAME",
                "Value": { "Ref": "dbname" }
              },
              {
                "Name": "DB_USER",
                "Value": { "Ref": "dbuser" }
              },
              {
                "Name": "DB_PASSWORD",
                "Value": { "Ref": "dbpassword" }
              },
              {
                "Name": "ARG_apphost",
                "Value": { "Fn::Join" : ["", ["http://", { "Ref" : "StorefrontElb" }, ":80/StorefrontWeb" ]]}
              },
              {
                "Name" : "POPULATE_NUODB",
                "Value" : "true"
              },
              {
                "Name" : "ELASTIC_HOST",
                "Value" : { "Ref" : "ElkPrivateIP"}
              },
              {
                "Name" : "ELASTIC_PORT",
                "Value" : { "Ref" : "ElasticPort" }
              },
              {
                "Name" : "ELASTIC_INDEX",
                "Value" : { "Ref" : "ElasticIndex" }
              }
            ]
          }
        ]
      }
    },

    "BrokerService": {
      "DependsOn" : ["NuoDBBrokerTaskDefinitions"],
      "Type" : "AWS::ECS::Service",
      "Properties" : {
        "Cluster" : { "Ref" : "EcsClusterName" },
        "DesiredCount" : "1",
        "ServiceName" : "BROKER-service",
        "PlacementStrategies" : [{ "Type": "random"}],
        "TaskDefinition" : { "Ref" : "NuoDBBrokerTaskDefinitions" }
      }
    },

    "TEService": {
      "DependsOn" : ["BrokerService"],
      "Type" : "AWS::ECS::Service",
      "Properties" : {
        "Cluster" : { "Ref" : "EcsClusterName" },
        "DesiredCount" : "5",
        "ServiceName" : "TE-service",
        "PlacementStrategies" : [{ "Type": "random"}],
        "TaskDefinition" : { "Ref" : "NuoDBTETaskDefinitions" }
      }
    },

    "SMService": {
      "DependsOn" : ["BrokerService"],
      "Type" : "AWS::ECS::Service",
      "Properties" : {
        "Cluster" : { "Ref" : "EcsClusterName" },
        "DesiredCount" : "1",
        "ServiceName" : "SM-service",
        "PlacementStrategies" : [{ "Type": "random"}],
        "TaskDefinition" : { "Ref" : "NuoDBSMTaskDefinitions" }
      }
    }
  }
}